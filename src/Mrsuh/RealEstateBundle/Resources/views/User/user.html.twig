{% extends "MrsuhRealEstateBundle::layout.html.twig" %}
{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            <br>
            <div class="row">
                <div class="col-md-4"><label>Логин*</label></div>
                <div class="col-md-8">{{ form_widget(form.username, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}</div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-4"><label>Пароль</label></div>
                <div class="col-md-8">{{ form_widget(form.password, {'attr': {'class': 'form-control' }}) }}</div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-4"><label>Фамилия</label></div>
                <div class="col-md-8">{{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}</div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-4"><label>Имя</label></div>
                <div class="col-md-8">{{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}</div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-4"><label>Отчество</label></div>
                <div class="col-md-8">{{ form_widget(form.middle_name, {'attr': {'class': 'form-control'}}) }}</div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-4"><label>Телефон</label></div>
                <div class="col-md-8">{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}</div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-4"><label>Почтовый ящик*</label></div>
                <div class="col-md-8">{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}</div>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-2">{{ form_widget(form.user_save, {'attr': {'class': 'btn btn-success btn-width'}}) }}</div>
        {% if self %}
        <div class="col-md-2"><button type="button" class="btn btn-danger btn-width pull-right" id="delete_button" style="display: none">Удалить</button></div>
        {% else %}
        <div class="col-md-2"><button type="button" class="btn btn-danger btn-width pull-right" id="delete_button">Удалить</button></div>
        {% endif %}

    </div>

    {{ form_widget(form.user_delete, {'attr': {'style': 'display: none;'}}) }}
    {{ form_end(form) }}
{% endblock %}

{% block js %}
    <script>

        var delete_button = $('#delete_button');
        var delete_submit = $('#editUser_user_delete');

        delete_button.click(function () {
            if (confirm('Вы уверены, что хотите удалить пользователя?')) {
                delete_submit.click();
            }
        });

    </script>
{% endblock %}